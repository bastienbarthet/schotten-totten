<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">40dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/gloria_hallelujah</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomAlertDialog" parent="AppTheme">
        <item name="android:fontFamily">@font/finger_paint</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonTint">@android:color/white</item>
    </style>

</resources>
